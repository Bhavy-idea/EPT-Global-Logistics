<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonAddCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:src="@drawable/ic_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCheckBox"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--        <androidx.appcompat.widget.AppCompatCheckBox-->
                <!--            android:id="@+id/checkBoxOne"-->
                <!--            android:layout_width="@dimen/dp_150"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:text="@string/checkbox_1" />-->

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonAddRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:src="@drawable/ic_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutRadioButton"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutCheckBox" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutCheckBox">

                <!--        <androidx.appcompat.widget.AppCompatRadioButton-->
                <!--            android:id="@+id/radioButtonOne"-->
                <!--            android:layout_width="@dimen/dp_150"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:text="@string/radiobutton_1" />-->

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/buttonAddEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_12"
                android:src="@drawable/ic_add"
                app:layout_constraintEnd_toEndOf="@+id/buttonAddRadioButton"
                app:layout_constraintStart_toStartOf="@+id/buttonAddRadioButton"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutRadioButton" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutEditText"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:orientation="vertical"
                app:layout_constraintEnd_toStartOf="@id/buttonAddEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutRadioButton">

                <!--        <androidx.appcompat.widget.AppCompatEditText-->
                <!--            android:id="@+id/editTextOne"-->
                <!--            android:layout_width="@dimen/dp_150"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:hint="@string/edittext_1"-->
                <!--            app:layout_constraintStart_toStartOf="parent"-->
                <!--            app:layout_constraintTop_toBottomOf="@+id/linearLayoutRadioButton" />-->

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>